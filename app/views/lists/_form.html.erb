<h1><%= @list.id ? 'Edit List' : 'Create List' %></h1>
<%= form_with(model: [@board, @list], local: true, class: 'ui form') do |f| %>
    <div class='field'>
        <%= f.label :name %>
        <%= f.text_field :name, required: true, placeholder: 'List Name' %>
        <br>
        <%= f.label :priority %>
        <%= f.text_field :priority, placeholder: 'Type a number to create prioritized listing' %>
    </div>
    <%= f.submit nil, class: 'ui small blue button inverted' %>
    <%= link_to 'Back', :back, class: 'ui small secondary button inverted' %>
<% end %>
