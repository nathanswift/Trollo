<h1>Edit List</h1>
<%= form_with(model: [@list], local: true, class: 'ui form') do |f| %>
    <div class='field'>
        <%= f.label :name %>
        <%= f.text_field :name, required: true, placeholder: 'List Name' %>
        <br />
        <%= f.label :priority %>
        <%= f.number_field :priority %>
    </div>
    <%= f.submit nil, class: 'ui blue button inverted' %>
<% end %>
